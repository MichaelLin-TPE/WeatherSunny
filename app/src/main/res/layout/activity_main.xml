<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_location_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/location_name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_search"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_down_arrow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="15dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_down_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/list_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:visibility="gone"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="2dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/search_view">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/location_list"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/weather_status_view"
            app:layout_constraintTop_toBottomOf="@id/search_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
        </LinearLayout>

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ic_city_bg"
            android:id="@+id/iv_city_bg"
            app:layout_constraintTop_toBottomOf="@id/search_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <TextView
            android:id="@+id/tv_clock"
            app:layout_constraintTop_toTopOf="@id/weather_status_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:textColor="@color/black"
            tools:text="2023/05/09 13:57:25PM"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_pop_status"
            android:src="@drawable/ic_rain"
            app:layout_constraintTop_toBottomOf="@id/tv_clock"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toLeftOf="@id/tv_pop_status"
            android:contentDescription="@null"
            android:layout_width="50dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tv_pop_status"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/iv_pop_status"
            app:layout_constraintBottom_toBottomOf="@id/iv_pop_status"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="15dp"
            tools:text="15%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
